#include<stdio.h>
#define N 3
int queue[N];
int front = -1;
int rear = -1;


void enqueue(int val){
    if(front == (rear+1)%N){
        printf("\nQueue is full ");
        return;
    }
    else if(rear == -1 && front == -1){
        rear = front = 0;
        queue[rear] = val;
    }
    else {
        rear = (rear+1)%N;
        queue[rear] = val;
    }
    printf("\n%d is enqueued in queue",val);
}
void dequeue(){
    int temp;
    if(front == -1 && rear == -1){
        printf("\nQueue is empty");
        return;
    }
    else if(front == rear){
        temp = queue[front];
        front = rear = -1;
    }
   
    else{ 
        temp = queue[front];
        front = (front+1)%N;
    }

    printf("%d is dequeued from queue",temp);
}

void display(){
    int x = front;
    if(front == -1 && rear == -1){
        printf("\nQueue is empty");
        return;
        }
        printf("Elements of queue are : \n");
    while(1){
            printf("%d ",queue[x]);
            if(x == rear) break;
            x = (x+1)%N;
    }
}
int main(){
    while(1){
    printf("\n1.Enqueue\n2.Dequeue\n3.Display\n4.Exit\nEnter your choice : ");
    int choice;
    scanf("%d",&choice);
    int val;
    
    switch(choice){
        case 1:
            printf("\nEnter your value to Enqueue : ");
            scanf("%d",&val);
            enqueue(val);
            break;
        case 2:
            dequeue();
            break;
        case 3:
            display();
            break;
        case 4:
            return 0;
        default :
            printf("\nEnter valid choice");
            break;
    }

    }
    return 0;
}
