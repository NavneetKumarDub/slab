#include<stdio.h>
#define N 3
int queue[N];
int front = -1;
int rear = -1;


void enqueue(int val){
    if(rear == N-1){
        printf("Queue is full");
        return;
    }
    else if(rear == -1 && front == -1){
        rear = front = 0;
        queue[rear] = val;
    }
    else {
        queue[++rear] = val;
    }
    printf("%d is enqueued in queue",val);
}

void dequeue(){
    int temp = 0;
    if(rear == -1 && front == -1){
        printf("Queue is empty");
        return;
    }
    else if(rear == front){
        temp = queue[front];
        rear = front = -1;
    }
    else{
        temp = queue[front++];
    }
     printf("%d is dequeued from queue",temp);
}
void display(){
    printf("\nElements of queue are : \n");
    for(int i = front;i<=rear;i++){
        printf("%d,",queue[i]);
    }
}
int main(){
    while(1){
    printf("\n1.Enqueue\n2.Dequeue\n3.Display\n4.Exit\nEnter your choice : ");
    int choice;
    scanf("%d",&choice);
    int val;
    
    switch(choice){
        case 1:
            printf("\nEnter your value to Enqueue : ");
            scanf("%d",&val);
            enqueue(val);
            break;
        case 2:
            dequeue();
            break;
        case 3:
            display();
            break;
        case 4:
            return 0;
        default :
            printf("\nEnter valid choice");
            break;
    }

    }
    return 0;
}
